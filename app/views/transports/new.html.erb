<div class="container">
<h1>New Transport</h1>
<%= form_for :transport, url: transports_path do |f| %>
    <p>
        <%= f.label :name  %><br>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :car_plate %><br>
        <%= f.text_field :car_plate %>
    </p>
    <p>
        <%= f.label :year  %><br>
        <%= f.text_field :year %>
    </p>
    <p>
        <%= f.label :manufacturer %><br>
        <%= f.text_field :manufacturer %>
    </p>
    <p>
        <%= f.label :model  %><br>
        <%= f.text_field :model %>
    </p>
    <p>
        <%= f.label :accident %><br>
        <%= f.check_box :accident %>
    </p>
    <p>
        <%= f.label :owner  %><br>
        <%= f.text_field :owner %>
    </p>
    <p>
        <%= f.label :payment %><br>
        <%= f.text_field :payment %>
    </p>
    <p>
        <%= f.label :cc  %><br>
        <%= f.text_field :cc %>
    </p>
    <p>
        <%= f.file_field :picture %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>
<button class="btn btn-default"><%= link_to 'Back', transports_path %></button>
</div>
